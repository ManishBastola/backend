server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "*"
            allowedMethods: "*"
            allowedHeaders: "*"
            allowCredentials: true

      routes:
        - id: login-service
          uri: http://localhost:8082
          predicates:
            - Path=/auth/**

        - id: transaction-service
          uri: http://localhost:8083
          predicates:
            - Path=/transaction/**

        - id: creditcard-service
          uri: http://localhost:8084
          predicates:
            - Path=/creditcard/**

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka
