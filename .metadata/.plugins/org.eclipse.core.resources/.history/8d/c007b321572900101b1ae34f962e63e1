server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "http://localhost:3000"
            allowedMethods: "*"
            allowedHeaders: "*"
            allowCredentials: true
      routes:
        - id: login-service
          uri: lb://LOGIN-SERVICE
          predicates:
            - Path=/auth/**

        - id: transaction-service
          uri: lb://TRANSACTION-MICROSERVICE
          predicates:
            - Path=/transaction/**

        - id: creditcard-service
          uri: lb://CREDITCARD-MICROSERVICE
          predicates:
            - Path=/creditcard/**

        - id: loan-service
          uri: lb://LOAN-SERVICE
          predicates:
            - Path=/loan/**

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka
